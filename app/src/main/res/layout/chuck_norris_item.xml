<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chucknorristest.utils.ui.BaseFragment">

    <ImageView
        android:id="@+id/chuck_logo"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/chuck_joke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chucknorris_logo" />

    <TextView
        android:id="@+id/chuck_joke"
        android:layout_width="match_parent"
        android:layout_height="274dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:hint="Joke"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chuck_logo" />

    <Button
        android:id="@+id/next_joke_btn"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="114dp"
        android:text="@string/next_joke_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chuck_joke" />


</androidx.constraintlayout.widget.ConstraintLayout>